<?php
/**
 * @file
 * Code for the DF Engage feature.
 */

include_once 'df_engage.features.inc';

/**
 *  Implements hook_post_features_enable_feature().
 */
function df_engage_post_features_enable_feature($component) {
  // Log components as they are enabled.
  watchdog('component', 'df_engage enabled ' . $component . ' component');
}

/**
 * Implements hook_migrate_api().
 */
function df_engage_migrate_api() {
  $api = array(
    'api' => 2,
    'migrations' => array(
      'DemoFrameworkBaseGroups' => array('class_name' => 'DemoFrameworkBaseGroups', 'group_name' => 'df'),
      'DemoFrameworkBaseNodesGroup' => array('class_name' => 'DemoFrameworkBaseNodesGroup', 'group_name' => 'df'),
      'DemoFrameworkBaseNodesUUID' => array('class_name' => 'DemoFrameworkBaseNodesUUID', 'group_name' => 'df'),
      'DemoFrameworkSiteSectionTerms' => array('class_name' => 'DemoFrameworkSiteSectionTerms', 'group_name' => 'df'),
    ),
  );
  return $api;
}

