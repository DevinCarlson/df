<?php

/**
 * @file
 * Contains df_admin.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function df_admin_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the df_admin module.
    case 'help.page.df_admin':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Administration tools for Demo Framework.') . '</p>';
      return $output;
    default:
  }
}

/**
 * Implements hook_theme().
 */
function df_admin_theme() {
  $theme = [];
  return $theme;
}

/**
 * Function to return DFS migrations.
 */
function df_admin_scenario_migrations($scenario) {
  // Set up migrations array.
  $migrations = [];
  // Invoke hook_df_import.
  $migrations = Drupal::moduleHandler()->invokeAll('df_import');
  // Invoke hook_df_import_alter.
  Drupal::moduleHandler()->alter('df_import', $migrations);
  $migrations = $migrations[$scenario];
  return $migrations;
}

